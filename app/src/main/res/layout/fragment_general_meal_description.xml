<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/general_meal_description"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_random_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/home_screen_random_meal_cardview_margin"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_random_meal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_screen_img_meals"
                android:contentDescription="@string/homescreen_description_random_meal"
                android:scaleType="centerCrop"
                tools:src="@drawable/cardview_random_meal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_between_elements_default">

                <TextView
                    android:id="@+id/txt_meal_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_between_elements_default"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/material_design_title_txt_size"
                    tools:text="Meal name" />

                <TextView
                    android:id="@+id/txt_meal_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/material_design_body_txt_size"
                    tools:text="Meal category: lunch" />

                <TextView
                    android:id="@+id/txt_meal_cuisine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/material_design_body_txt_size"
                    tools:text="Country cuisine: Japanese" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txt_meal_description_title"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_between_elements_default"
        android:text="@string/general_meal_default_instructions_title"
        android:textSize="@dimen/material_design_title_txt_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview_random_meal" />

    <TextView
        android:id="@+id/txt_meal_description_body"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_between_elements_default"
        android:maxLines="6"
        android:textSize="@dimen/material_design_body_txt_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_meal_description_title"
        tools:text="This is a really long text.This is a really long text." />

    <TextView
        android:id="@+id/txt_instructions"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_between_elements_default"
        android:text="@string/general_meal_default_instructions_title"
        android:textSize="@dimen/material_design_title_txt_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_meal_description_body" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_ingredients"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="@dimen/no_dimens"
        android:layout_margin="@dimen/margin_between_elements_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_instructions"
        tools:listitem="@layout/item_ingredients_measures">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
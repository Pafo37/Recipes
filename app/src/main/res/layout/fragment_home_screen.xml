<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_random_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_random_meal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_default_height"
                android:contentDescription="@string/homescreen_description_random_meal"
                android:scaleType="centerCrop"
                tools:src="@drawable/cardview_random_meal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:text="@string/homescreen_random_meal"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/title_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/description_text"
                    tools:text="It is really good" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/id_latest_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_random_meal"
        android:layout_margin="@dimen/margin_4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_8dp">

            <ImageView
                android:id="@+id/id_latest_meal_image"
                android:layout_width="@dimen/homescreen_small_screens"
                android:layout_height="@dimen/homescreen_small_screens"
                android:contentDescription="@string/homescreen_description_latest_meal"
                android:scaleType="centerCrop"
                tools:src="@drawable/cardview_random_meal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:text="@string/homescreen_latest_meal"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/title_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/description_text"
                    tools:text="It is really good" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview_random_meal"
        android:layout_margin="@dimen/margin_4dp"
        android:layout_toEndOf="@id/id_latest_meal"
        android:layout_toRightOf="@+id/id_latest_meal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_8dp">

            <ImageView
                android:id="@+id/id_category"
                android:layout_width="@dimen/homescreen_small_screens"
                android:layout_height="@dimen/homescreen_small_screens"
                android:contentDescription="@string/homescreen_description_category"
                android:scaleType="centerCrop"
                android:src="@drawable/category_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8dp"
                    android:text="@string/homescreen_category"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/title_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/homescreen_browse_by_category"
                    android:textColor="@color/color_gray"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>

